<div class="title-container">
    <h1> Post Index </h1>
    <%= link_to "Add Post", new_post_path, class: "btn btn-default"%>
</div>

<hr>

<div class="posts">
    <% @posts.each do |post| %>
        <div class = "post">
            <div class="well">
                <div class="caption">
                    <h3> <%= link_to truncate(post.title), post_path(post) %> </h3>
                    <p> <%= truncate(post.body, length: 150) %> </p>
                    <p> Written By: <%= post.email %> </p>
                    
                        <%= link_to "Read More...", post_path(post), class: "btn btn-default"%>

                    
                </div>
            </div>
        </div>

    <% end%>

</div>
